<!DOCTYPE html>
<html lang="xyz">
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}
            Acceuil
        {% endblock %}
    </title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css"/>
    {% endblock %}

    {% block javascripts %}

    {% endblock %}
</head>

<body>
    <header>

        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">LOL Community</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="true" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="/videos"> Funny videos
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                        </ul>

                        <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link active" href="/article"> Articles
                                        <span class="visually-hidden">(current)</span>
                                    </a>
                                </li>
                            </ul>


                {% if app.user is  defined and app.user is not empty %}
                    <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link">{{ app.user.speudo }} Est connecté</a>
                            </li>
                        </ul>
                        <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="/logout">Se déconnecter</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                {% else %}
                    <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Se connecter</a>
                            </li>
                        </ul>
                        <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="/register">S'inscrire</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                {% endif %}
                        <div class="navbar-collapse collapse show" id="navbarColor01" style="">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link active" href="/contact/new"> Nous contacter
                                        <span class="visually-hidden">(current)</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        {% endblock %}
    </header>

    {% block body %}
        <img src="{{ asset('media/lol.png') }}" alt="Charge pas" id="imgBackground" style="width: 100%; height: 100vh">

    {% endblock %}

    </body>
</html>
