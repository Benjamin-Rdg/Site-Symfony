                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Speudo</th>
                <td>{{ user.speudo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

